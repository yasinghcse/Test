<%= form_for :session ,url: login_path  do |f| %>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :email %>
  </div>
  <div class="col-sm-10">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter Email"%><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :password %>
  </div>
  <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control", autocomplete: "off"%><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Login", class: 'btn btn-primary'%>
  </div>
</div>
<% end %>
<div class="col-xs-4  col-xs-offset-4">
[ <%= link_to 'Cancel request and retun to article listing', articles_path%> ]
</div>