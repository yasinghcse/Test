<% if @article.errors.any? %>
<h2>The following error prevented the articles from created.</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>


<%= form_for @article do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
<%= f.label :description %>
<%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to 'Back to index', articles_path%>