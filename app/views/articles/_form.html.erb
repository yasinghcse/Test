<%= render 'shared/error', obj: @article %>

<div class='row'>
<div class='col-xs-12'>
<%= form_for @article do |f| %>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :title %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :description %>
  </div>
  <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control", placeholder: "Description"%><br>
  </div>
</div>
<div class="form-group">
  <div class = "row" >
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
      <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text}%>
      <% end %>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
</div>
<% end %>
<div class="col-xs-4  col-xs-offset-4">
[ <%= link_to 'Cancel request and retun to article listing', articles_path%> ]
</div>
</div>
</div>