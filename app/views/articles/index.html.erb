<p>
  <%= link_to 'Create new Article', new_article_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <tr>
    <% @articles.each do |article| %>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Edit this article', edit_article_path(article) %></td>
    <td><%= link_to 'Show this article', article_path(article) %></td>
  </tr>
  <% end %>
</table>