<%= render 'shared/error', obj: @user %>
<div class='row'>
<div class='col-xs-12'>
<%= form_for @user do |f| %>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :username %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :username, class: "form-control", placeholder: "Title" %><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :email %>
  </div>
  <div class="col-sm-10">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter Email"%><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :password %>
  </div>
  <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%><br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: 'btn btn-primary')%>
  </div>
</div>
<% end %>
<div class="col-xs-4  col-xs-offset-4">
[ <%= link_to 'Cancel request and retun to article listing', articles_path%> ]
</div>
</div>
</div>