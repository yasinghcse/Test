<h1 align = "Center">New Category</h1>

<%= render 'shared/error', obj: @category %>
<div class='row'>
<div class='col-xs-12'>
<%= form_for @category do |f| %>
<div class="form-group">
  <div class="col-sm-2 control-label" >
    <%= f.label :name %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", placeholder: "Category-Name" %><br>
  </div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
[ <%= link_to 'Cancel request and retun to category listing', categories_path%> ]
</div>
</div>
</div>